<?xml version='1.0' encoding='utf-8'?>
<hibernate-configuration>
    <session-factory>
        <property name = "connection.url">jdbc:postgresql://127.0.0.1:5432/postgres</property>
        <property name = "connection.driver_class">org.postgresql.Driver</property>
        <property name = "connection.username">postgres</property>
        <property name = "connection.password">519977</property>
        <property name = "dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>

        <mapping resource = "models/Brand.hbm.xml" />
        <mapping resource = "models/Model.hbm.xml" />
        <mapping resource = "models/BrandModel.hbm.xml" />
        <mapping resource = "models/Wheel.hbm.xml" />
        <mapping resource = "models/Drive.hbm.xml" />
        <mapping resource = "models/Colour.hbm.xml" />
        <mapping resource = "models/CarBody.hbm.xml" />
        <mapping resource = "models/EngineType.hbm.xml" />
        <mapping resource = "models/Transmission.hbm.xml" />
        <mapping resource = "models/Role.hbm.xml" />
        <mapping resource = "models/User.hbm.xml" />

        <mapping resource = "models/Ad.hbm.xml" />
    </session-factory>

</hibernate-configuration>
